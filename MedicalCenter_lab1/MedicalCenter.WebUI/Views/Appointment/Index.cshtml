@using MedicalCenter.Core.Entities
@using MedicalCenter.WebUI.Controllers
@model List<Appointment>


@{
    ViewData["Title"] = "Список прийомів";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/appointments/create" class="btn btn-success float-end">Записатися на прийом</a>
<div class="float-end" style="width:10px"></div>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата і час прийому</th>
            <th>Лікар</th>
            <th>Опис проблеми</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
            <strong>@p.DateTime</strong>
                </td>
                <td><img src="@p.Doctor.Photo" /><br />@p.Doctor.FullName</td>
                
                <td> @p.Type</td>

        <td>
            <a href="/appointments/details/@p.Id" class="btn btn-primary">Детально</a>
            <a href="/appointments/edit/@p.Id" class="btn btn-warning">Редагувати</a>
            <a href="/appointments/delete/@p.Id" class="btn btn-danger">Видалити</a>
        </td>
            </tr>
        }


    </tbody>
</table>

